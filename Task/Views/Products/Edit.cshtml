@model Product
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<form asp-action="Edit" asp-controller="Products" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter Name">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="text" class="form-control" id="price" aria-describedby="emailHelp" placeholder="Enter Price">
    </div>
    @*     <div class="form-group">
        <label asp-for="HDate">Hire Date</label>
        <input asp-for="HDate" class="form-control" id="exampleInputPassword1" placeholder="Date">
    </div> *@
    <div class="form-select">
        <label asp-for="CategoryId">Categories</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
            <option value="-1" selected>Please Select a Category</option>
        </select>
    </div>
    <div class="form-check">
        <input asp-for="ISActive" type="checkbox" class="form-check-input" id="exampleCheck1">
        <label asp-for="ISActive" class="form-check-label" for="exampleCheck1">Active</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-warning" asp-action="Products" asp-controller="Products">Cancel</a>
</form>